+CONFIG_AXP_ELDO1_VOLT=1200
+CONFIG_AXP_ELDO2_VOLT=1800
+CONFIG_AXP_DLDO1_VOLT=3100
+CONFIG_AXP_DLDO3_VOLT=1800
+CONFIG_AXP_DLDO4_VOLT=3000
+CONFIG_AXP_FLDO2_VOLT=900
