+
+/*  !!! NOTICE NOTICE NOTICE !!!  */
+/* WIP station, NOT Final version */
+/*
+ * board marked AZW-KT02 Ver2.0.
+ * It has the following features:
+ * 
+ * - Allwinner H6 quad-core 64-bit ARM Cortex-A53
+ * - GPU Mali-T720
+ * - 1GB LPDDR3 RAM
+ * - AXP805 PMIC
+ * - AP6212 Wifi/BT
+ * - 1x USB 2.0 Host and 1x USB 3.0 Host
+ * - 1x USB 2.0 micro usb
+ * - 100M EMAC Ethernet via AC200
+ * - HDMI 2.0 port
+ * - 8GB eMMC
+ * - S/PDIF Tx
+ * - IR receiver
+ * - 5V/2A DC power supply
+ * 
+ * Add basic support for the board. 
+*/
+
+
+#include "sun50i-h6-beelink-gs1.dts"
+
+/ {
+	model = "Shan Bei H6 AZW-KT02 ver2.0";
+	compatible = "azw,beelink-gs1", "allwinner,sun50i-h6";
+
+	aliases {
+		ethernet0 = &emac;
+		serial0 = &uart0;
+		serial1 = &uart1;
+		mmc0 = &mmc0;
+		mmc1 = &mmc1;
+		mmc2 = &mmc2;
+	};
+
+/* copy from Orange Pi Lite2 dts */
+	wifi_pwrseq: wifi-pwrseq {
+		compatible = "mmc-pwrseq-simple";
+		clocks = <&rtc 1>;
+		clock-names = "ext_clock";
+		reset-gpios = <&r_pio 0 8 GPIO_ACTIVE_LOW>; /* PL8 */
+		post-power-on-delay-ms = <200>;
+	};
+
+//	/delete-node/ reg_gmac_3v3;
+};
+
+//pio for i2c3 and ac200 , emac power
+&reg_aldo2 {
+//tanix tx6 don't have PMU
+//use this ugly solution
+	regulator-always-on;
+};
+
+&pio {
+	vcc-pc-supply = <&reg_bldo2>;
+	vcc-pg-supply = <&reg_bldo3>;
+};
+
+/* //drop for u-boot
+//i2c3
+&i2c3_pins {
+	drive-strength = <20>;
+	bias-pull-up;
+};
+&i2c3 {
+	status = "okay";
+};
+*/
+
+//AC200
+&pwm {
+	status = "okay";
+//	status = "disabled";
+};
+
+/* //drop for u-boot
+&ac200_pwm_clk {
+	status = "okay";
+//	status = "disabled";
+
+};
+
+&ac200 {
+	interrupt-parent = <&pio>;
+	interrupts = <1 20 IRQ_TYPE_LEVEL_LOW>; //PB20 for H6
+	interrupt-controller;
+	interrupt-cells = <1>;
+	status = "okay";
+};
+
+&ac200_ephy {
+	clocks = <&ac200_pwm_clk>;
+	status = "okay";
+};
+*/
+
+//board using ac200-ephy but not rtl8211
+//fix for u-boot v2021.07
+&emac {
+	pinctrl-names = "default";
+	pinctrl-0 = <&ext_rmii_pins>;
+	phy-mode = "rmii";
+	phy-handle = <&rmii_phy>;
+	phy-supply = <&reg_aldo2>;
+	allwinner,rx-delay-ps = <200>;
+	allwinner,tx-delay-ps = <200>;
+	status = "okay";
+};
+&mdio {
+	rmii_phy: ethernet-phy@1 {
+		compatible = "ethernet-phy-ieee802.3-c22";
+		reg = <1>;
+	};
+};
+
+// MMC devices
+/* sdcard */
+&mmc0 {
+	vmmc-supply = <&reg_cldo1>;
+	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
+	bus-width = <4>;
+	status = "okay";
+};
+
+/* SDIO WiFi */
+/* copy from Orange Pi Lite2 dts */
+&mmc1 {
+	vmmc-supply = <&reg_cldo3>;
+	vqmmc-supply = <&reg_bldo3>;
+	mmc-pwrseq = <&wifi_pwrseq>;
+	bus-width = <4>;
+	non-removable;
+	status = "okay";
+
+	/* AP6212 */
+	brcm: sdio-wifi@1 {
+		reg = <1>;
+		compatible = "brcm,bcm4329-fmac";
+		interrupt-parent = <&r_pio>;
+		interrupts = <1 0 IRQ_TYPE_LEVEL_LOW>; /* PM0 */
+		interrupt-names = "host-wake";
+	};
+};
+
+/* eMMC */
+&mmc2 {
+	vmmc-supply = <&reg_cldo1>;
+	vqmmc-supply = <&reg_bldo2>;
+	max-frequency = <150000000>;
+	mmc-ddr-1_8v;
+	mmc-hs200-1_8v;
+	mmc-hs400-1_8v;
+	cap-mmc-hw-reset;
+	non-removable;
+	bus-width = <8>;
+	status = "okay";
+};
+
+/* There's the BT part of the AP6212 connected to that UART */
+/* copy from Orange Pi Lite2 dts */
+&uart1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart1_pins>, <&uart1_rts_cts_pins>;
+	uart-has-rtscts;
+	status = "okay";
+
+	bluetooth {
+		compatible = "brcm,bcm4345c5";
+		clocks = <&rtc 1>;
+		clock-names = "lpo";
+		device-wakeup-gpios = <&r_pio 1 2 GPIO_ACTIVE_HIGH>; /* PM2 */
+		host-wakeup-gpios = <&r_pio 1 1 GPIO_ACTIVE_HIGH>; /* PM1 */
+		shutdown-gpios = <&r_pio 1 4 GPIO_ACTIVE_HIGH>; /* PM4 */
+		max-speed = <1500000>;
+	};
+};
+
